<section id="considering-cards" class="cards cards--considering">
  <h2 class="cards__heading">
    Considering
  </h2>

  <% if collection = filter.single_collection || (Current.user.collections.first if Current.user.collections.one?) %>
    <%= button_to collection_cards_path(collection), method: :post, class: "card card--new-card-button btn", form_class: "full-width" do %>
      <div class="card__body flex align-center gap-half txt-xx-large margin-block-half">
        <%= icon_tag "add" %>
        <span>Add a new card</span>
      </div>
    <% end %>
  <% end %>

  <% if page.used? %>
    <%= render partial: "cards/display/preview", collection: page.records, as: :card, cached: true %>

    <% unless page.last? %>
      <%= cards_next_page_link "considering-cards", page: page, filter: filter %>
    <% end %>
  <% else %>
    <p class="txt-medium translucent">Nothing here</p>
  <% end %>
</section>
